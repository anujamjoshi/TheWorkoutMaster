<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gauri.theworkoutmaster.StrengthFocusActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="top"
        android:background="#1be4e4"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text ="Strength Workout"
        android:textAlignment="center"
        android:textSize="12pt"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/strength_full_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="full body!"
            android:background="@drawable/backgroud_wide"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/strength_upper_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="upper body!"
            android:background="@drawable/backgroud_wide_gym_home"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/strength_core_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="core!"
            android:layout_weight="1"
            android:background="@drawable/backgroud_wide_lazy"
            />
        <Button
            android:id="@+id/strength_lower_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="lower body!"
            android:layout_weight="1"
            android:background="@drawable/backgroud_wide_home"
            />

    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
