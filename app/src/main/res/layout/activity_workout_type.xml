<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gauri.theworkoutmaster.WorkoutTypeActivity">
    <LinearLayout
        android:background="#1ad4d4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:gravity="center"
        >


        <Button
            android:id="@+id/strength_button"
            android:layout_width="match_parent"
            android:text="Strength! "
            android:layout_height="0dp"
            android:background="@drawable/backgroud_wide"
            android:layout_weight="1"
            />





        <Button
            android:id="@+id/cardio_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Cardio!"
            android:layout_weight="1"
            android:background="@drawable/backgroud_wide_home"
            />
        <Button
            android:id="@+id/stretch_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Stretch!"
            android:background="@drawable/backgroud_wide"
            android:layout_weight="1"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
